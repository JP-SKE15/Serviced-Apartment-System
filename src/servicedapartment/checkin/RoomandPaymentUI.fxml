<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="640.0" prefWidth="627.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="servicedapartment.checkin.RoomandPaymentController">
   <top>
      <Label text="ROOM &amp; PAYMENT" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" top="20.0" />
         </BorderPane.margin>
         <font>
            <Font name="Comic Sans MS" size="48.0" />
         </font>
      </Label>
   </top>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label layoutX="396.0" layoutY="281.0" text="Payment Type:">
               <font>
                  <Font name="Comic Sans MS" size="24.0" />
               </font>
            </Label>
            <RadioButton fx:id="cash" layoutX="419.0" layoutY="334.0" mnemonicParsing="false" text="Cash">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="credit" layoutX="417.0" layoutY="383.0" mnemonicParsing="false" text="Credit Cards">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </RadioButton>
            <Label layoutX="396.0" layoutY="46.0" text="Room Type:">
               <font>
                  <Font name="Comic Sans MS" size="24.0" />
               </font>
            </Label>
            <ComboBox fx:id="roomTypes" layoutX="417.0" layoutY="105.0" prefHeight="34.0" prefWidth="173.0" />
            <TableView fx:id="table" layoutX="21.0" layoutY="26.0" prefHeight="406.0" prefWidth="356.0">
              <columns>
                <TableColumn fx:id="roomNumb" prefWidth="164.0" text="Room No." />
                <TableColumn fx:id="roomStatus" minWidth="0.0" prefWidth="192.0" text="Room Status" />
              </columns>
            </TableView>
         </children>
      </Pane>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="64.0" prefWidth="627.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="cancel" mnemonicParsing="false" onAction="#handleCancel" prefHeight="37.0" prefWidth="115.0" text="Cancel">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </Button>
            <Button fx:id="next" mnemonicParsing="false" onAction="#passInfo" prefHeight="37.0" prefWidth="115.0" text="Next">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
