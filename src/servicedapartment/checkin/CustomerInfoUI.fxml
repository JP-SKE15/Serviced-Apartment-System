<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="475.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="servicedapartment.checkin.CustomerInfoController">
   <top>
      <Label text="BOOKING &amp; CHECK-IN" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" top="20.0" />
         </BorderPane.margin>
         <font>
            <Font name="Comic Sans MS" size="48.0" />
         </font>
      </Label>
   </top>
   <center>
      <FlowPane alignment="CENTER" hgap="10.0" prefHeight="381.0" prefWidth="560.0" vgap="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Customer name:">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="name" prefHeight="37.0" prefWidth="340.0">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </TextField>
            <Label text="Phone number:">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="phone" prefHeight="37.0" prefWidth="329.0">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </TextField>
            <Label text="E-mail:">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="email" prefHeight="37.0" prefWidth="396.0">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </TextField>
            <Label text="Stay for">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="stay" prefHeight="37.0" prefWidth="65.0">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </TextField>
            <ComboBox fx:id="units" prefHeight="27.0" prefWidth="95.0" />
            <Label text="No. of Customer:">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
               <FlowPane.margin>
                  <Insets left="10.0" />
               </FlowPane.margin>
            </Label>
            <TextField fx:id="amount" prefHeight="37.0" prefWidth="65.0">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </TextField>
            <Label text="Check-in Date:">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </Label>
            <DatePicker prefHeight="35.0" prefWidth="228.0" />
            <Button fx:id="cancel" mnemonicParsing="false" prefHeight="37.0" prefWidth="140.0" text="Cancel">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
               <FlowPane.margin>
                  <Insets right="10.0" />
               </FlowPane.margin>
            </Button>
            <Button fx:id="next" mnemonicParsing="false" prefHeight="37.0" prefWidth="140.0" text="Next">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
               <FlowPane.margin>
                  <Insets left="10.0" />
               </FlowPane.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
         </padding>
      </FlowPane>
   </center>
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</BorderPane>
